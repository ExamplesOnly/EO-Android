<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94000000">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <!--        <ImageButton-->
        <!--            android:id="@+id/exo_rew"-->
        <!--            android:layout_width="66dp"-->
        <!--            android:layout_height="66dp"-->
        <!--            android:layout_marginEnd="16dp"-->
        <!--            android:background="?attr/selectableItemBackgroundBorderless"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:src="@drawable/ic_backward_mono" />-->

        <ImageButton
            android:id="@+id/exo_play"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_fill" />

        <ImageButton
            android:id="@+id/exo_pause"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_pause_fill" />

        <!--        <ImageButton-->
        <!--            android:id="@+id/exo_ffwd"-->
        <!--            android:layout_width="66dp"-->
        <!--            android:layout_height="66dp"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:background="?attr/selectableItemBackgroundBorderless"-->
        <!--            android:scaleType="fitCenter"-->
        <!--            android:src="@drawable/ic_forward_mono" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:padding="8dp">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="-1dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="2:34"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="-1dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="2:34"
                android:textColor="#CBCBCB" />

            <ImageButton
                android:id="@+id/bt_fullscreen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_expand" />

        </LinearLayout>

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:paddingStart="-8dp"
            android:paddingEnd="-8dp"
            app:buffered_color="@color/md_deep_orange_200"
            app:played_color="@color/colorPrimary"
            app:scrubber_color="@color/colorPrimary"
            app:unplayed_color="@color/md_grey_300" />

    </LinearLayout>

</RelativeLayout>